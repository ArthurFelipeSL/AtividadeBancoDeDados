CREATE DATABASE DB_LOJA;

USE DB_LOJA;

CREATE TABLE CLIENTE (
CODCLIENTE INT,
NOME VARCHAR(100),
ENDERECO VARCHAR(100),
CIDADE VARCHAR(40),
BAIRRO VARCHAR(100) ,
ESTADO CHAR(2)
);

